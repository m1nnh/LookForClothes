<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPasswordActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/colorBrown">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/retina"
        android:text="Find Password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/clothes_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/retina"
        android:text="Email Input" />


    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/editTextUserEmail"
        android:textColorHint="@color/color_lightgray"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/btn_sign"
        android:hint="example@gmail.com"
        android:fontFamily="@font/retina"
        android:textColor="#000000"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:id="@+id/btn_find"
        android:background="@drawable/btn_white"
        android:gravity="center"
        android:fontFamily="@font/retina"
        android:text="SEND E-MAIL"
        android:textColor="#000000"/>

</LinearLayout>